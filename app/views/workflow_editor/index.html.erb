<div class="container-fluid" id="stepeditor">
  <div class="row">
    <div class="col-6">
      {{message}}
      <div id="jsoneditor" style="height: 400px;"></div>
    </div>
    <div class="col-3">
      <button id="save">Save</button>
    </div>
  </div>
</div>


<script type="text/javascript">

var func = function() {

  var setUpTheJsonEditor = function (params) {

    var container = document.getElementById(params.id);
    var options = {};
    var editor = new JSONEditor(container, options);

    editor.set(params.data);

    return editor;
  };

  var step = {
    "type": 'EventFormatter',
    "config": {
      "data_merge": "merge",
      "instructions": {
        "full_name" : "{{first_name}} {{last_name}}"
      }
    }
  };

  $.get('/workflow_editor_data/<%= @id %>').then(function(data){
    var workflowEditor = setUpTheJsonEditor( { id: 'jsoneditor', data: data.workflow } )

    console.log('k');
    $('#save').click(function() {
      var json = workflowEditor.get();

      var request = { workflow: json };

      $.post('/workflow_editor/<%= @id %>', request).then(function(data){
        console.log(data);
      });
    });

  });


};

document.addEventListener("DOMContentLoaded", func);


</script>
