<div class="row">

  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">CRUD</h3>
      </div>
      <div class="box-body">
        <table class="table table-bordered">
	<tbody>
	  <tr>
	    <th>Name</th>
	    <th>Collection</th>
	  </tr>
          <% @crud_records.each do |crud_record| %>
	    <tr>
	      <td><a href="/crud/view/<%= crud_record.id %>"><%= crud_record.name || crud_record.id %></a></td>
	      <td><%= crud_record.collection_name %></td>
	    </tr>
	  <% end %>
	</tbody>
	</table>
      </div>
      <div class="box-footer">
      </div>
    </div>
  </div>

</div>

