<div class="row">

  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Record</h3>
      </div>
      <div class="box-body">
        <div id="record"></div>
      </div>
      <div class="box-footer">
      </div>
    </div>
  </div>

</div>

<script type="text/javascript">



var func = function() {

  jQuery.ajax( {
    method: 'GET',
    url: '/records/json/<%= @crud_record.id %>',
    success: function(data) {
               $('.box-title').text(data.name);
               JsonEditor.create( { id: 'record', data: data.data } );
             }
  } );

};

jQuery(func);

</script>
