<div class="container-fluid">
  <div class="row">
    <div class="col-6" id="stepeditor">
      {{message}}
      <div id="jsoneditor" style="height: 400px;"></div>
    </div>
    <div class="col-3">
      <div id="eventData" style="height: 200px;"></div>
      <div id="stepOutput" style="height: 200px;"></div>
    </div>
    <div class="col-3">
      C
    </div>
  </div>
</div>

<script type="text/javascript">

var func = function() {

  var app = new Vue({
    el: '#stepeditor',
    data: {
      message: 'Hello Vue!'
    }
  });

  var setUpTheJsonEditor = function (params) {

    var container = document.getElementById(params.id);
    var options = {};
    var editor = new JSONEditor(container, options);

    var json = {
      "Array": [1, 2, 3],
      "Boolean": true,
      "Null": null,
      "Number": 123,
      "Object": {"a": "b", "c": "d"},
      "String": "Hello World"
    };

    editor.set(json);
  };

  setUpTheJsonEditor( { id: 'jsoneditor' } );
  setUpTheJsonEditor( { id: 'eventData' } );
  setUpTheJsonEditor( { id: 'stepOutput' } );

};

document.addEventListener("DOMContentLoaded", func);


</script>
