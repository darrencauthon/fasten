<div class="container-fluid">
  <div class="row">
    <div class="col-6" id="stepeditor">
      {{message}}
      <div id="jsoneditor" style="height: 400px;"></div>
    </div>
    <div class="col-3">
      <div id="eventData" style="height: 200px;"></div>
      <div id="stepOutput" style="height: 200px;"></div>
    </div>
    <div class="col-3">
      C
    </div>
  </div>
</div>

<script type="text/javascript">

var func = function() {

  var app = new Vue({
    el: '#stepeditor',
    data: {
      message: 'Hello Vue!'
    }
  });

  var setUpTheJsonEditor = function (params) {

    var container = document.getElementById(params.id);
    var options = {};
    var editor = new JSONEditor(container, options);

    editor.set(params.data);
  };

  var step = {
      "Type": ['a', 'b', 'c'],
      //"Boolean": true,
      //"Null": null,
      //"Number": 123,
      //"Object": {"a": "b", "c": "d"},
      //"String": "Hello World"
    };


  setUpTheJsonEditor( { id: 'jsoneditor', data: step } );
  setUpTheJsonEditor( { id: 'eventData', data: {} } );
  setUpTheJsonEditor( { id: 'stepOutput', data: {} } );

};

document.addEventListener("DOMContentLoaded", func);


</script>
