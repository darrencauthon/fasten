<div class="row">

  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Events</h3>
      </div>
      <div class="box-body">
        <table class="table table-bordered">
	<tbody>
	  <tr>
	    <th>Name</th>
	  </tr>
          <% @workflows.each do |workflow| %>
	    <tr>
	      <td><a href="/workflows/edit/<%= workflow.id %>"><%= workflow.id %></a></td>
	    </tr>
	  <% end %>
	</tbody>
	</table>
      </div>
      <div class="box-footer">
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-new-workflow">
          New
        </button>
      </div>
    </div>
  </div>

</div>

<div class="modal fade" id="modal-new-workflow">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span></button>
        <h4 class="modal-title">New Workflow</h4>
      </div>
      <div class="modal-body">


        <div class="row">
          <div class="col-md-6">

            <form role="form">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleIputEmail1">Workflow ID</label>
                  <input type="text" class="form-control" id="newWorkflowId" placeholder="Enter a new workflow id">
                </div>
              </div>
            </form>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary pull-left" id="create-workflow">Create</button>
            <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">

var func = function() {
  $('#create-workflow').click(function(){
    var text = $('#newWorkflowId').val();
    window.location = '/workflows/edit/' + text;
  });
};

document.addEventListener('DOMContentLoaded', func);

</script>
