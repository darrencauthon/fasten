<script type="text/javascript">
  jQuery.ajax( {
    method: 'GET',
    url: '/overt/runs/event_json/<%= @event.id %>',
    success: function(data) {
               JsonEditor.create({
                 id: 'event',
                 data: data.event
               });
             }
  });
</script>

<h1>View <%= @event.id %></h1>

<% if @parent_event %>
  <div><a href="/overt/runs/view_event/<%= @parent_event.id %>"><%= @parent_event.message %></a></div>
<% end %>



<div id="event"></div>

<fieldset>
  <legend>Childlren</legend>
  <table>
    <thead>
      <tr>
        <td>Event</td>
      </tr>
    </thead>
    <tbody>
      <% @child_events.each do |event| %>
        <tr>
          <td><a href="/overt/runs/view_event/<%= event.id %>"><%= event.message %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</fieldset>